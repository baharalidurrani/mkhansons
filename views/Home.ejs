<!DOCTYPE html>
<html>

<head>
    <!--Import Google Icon Font-->
    <link href="/fonts/NotoNaskhArabicUI-Bold.ttf" rel="stylesheet">
    <!--Import materialize.css-->
    <link rel="stylesheet" href="/css/materialize.min.css">
    <link rel="stylesheet" type="text/css" href="/css/myStyle.css">
    <link rel="stylesheet" href="/css/jquery.dataTables.min.css">
    <title>M. Khan & Sons Distribution Agency</title>
    <meta name="theme-color" content="#00bcd4">
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<body>
    <header class="cyan">
        <nav class="cyan">
            <div class="nav-wrapper">
                <div class="container">
                    <a href="/" class="brand-logo">MKSDA</a>
                    <ul id="nav-mobile" class="right hide-on-med-and-down">
                        <li><a href="/sum">Summary</a></li>
                        <li><a href="/addc">Add Company</a></li>
                        <li><a href="/addp">Add Product</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <main class="g2196f3">
        <br>
        <div class="container white z-depth-3">
            <h3 align="center">M. Khan & Sons Distribution Agency</h3>
            <br>

            <!-- <div class="card">
                <div class="card-content"> -->
            <form action="/bill" method="post" id="myform">
                <button class="btn waves-effect waves-light right marginAll" type="submit">Prepare Bill</button>
                <br>
                <br>
                <div class="input-field marginAll">
                    <input id="first_name" type="text" class="validate" name="SHOP" required="" aria-required="true">
                    <label for="first_name">Enter Shop Name and select Products below:</label>
                </div>
                <br><br>
                <table id="myTable">
                    <thead>
                        <tr>
                            <th>Company</th>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Quantity</th>
                        </tr>
                    </thead>

                    <tbody>
                        <%for(let i=0;i<products.length; i++){%>
                        <tr>
                            <td><%=products[i]._company._name%></td>
                            <td><%=products[i]._name%></td>
                            <td><%=products[i]._price%></td>
                            <td><input type="number" name="QUANTITY"></td>
                            <input type="hidden" name="PRODUCT" value=<%=products[i]._id%>>
                            <input type="hidden" name="CNAME" value=<%=products[i]._company._name%>>
                            <input type="hidden" name="NAME" value=<%=products[i]._name%>>
                            <input type="hidden" name="PRICE" value=<%=products[i]._price%>>
                        </tr>
                        <%}%>
                    </tbody>
                </table>
            </form>
                <!-- </div>
            </div> -->
        </div>
        <br>
    </main>


    <footer class="cyan page-footer">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">M. Khan & Sons Distribution Agency</h5>
                    <p class="grey-text text-lighten-4">It's a simple web based Inventory System, specially crafted for MKSDA.</p>
                </div>
                <div class="col l4 offset-l2 s12">
                    <h5 class="white-text">Contact Developer</h5>
                    <ul>
                        <li><a class="grey-text text-lighten-3" href="https://gitlab.com/baharalidurrani" target="_blank">Gitlab</a></li>
                        <li><a class="grey-text text-lighten-3" href="https://twitter.com/BaharAliDurrani" target="_blank">Twitter</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container center">
                <span> Copyright Â© 2019 Department of Computer Science and Software Engineering, International Islamic
                    University, Islamabad.</span>
            </div>
        </div>
    </footer>


    <!-- //////////////////////////////////////////////////////////////////////////////////////////////// -->
    <!--JavaScript at end of body for optimized loading-->
    <script src="/js/jquery-3.4.1.min.js"></script>
    <script src="/js/jquery.dataTables.min.js"></script>
    <script src="/js/materialize.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({ paging: false });

            document.querySelector('#myTable_filter > label > input[type="search"]').style.marginLeft = 0;
        });

        document.getElementById("myform").onsubmit = function () {
            console.log('form about to submited');
            document.querySelector('#myTable_filter > label > input[type="search"]').value = '';
            $('#myTable_filter > label > input[type="search"]').keyup();
        };
    </script>
</body>

</html>